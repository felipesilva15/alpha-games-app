<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseButtonStyleWithMaterial" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">@drawable/bg_default_button</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="DefaultCustomToast">
        <item name="stTextColor">#000</item>
        <item name="stLength">LONG</item>
        <item name="stRadius">4dp</item>
        <item name="elevation">4dp</item>
        <item name="stTextSize">14sp</item>
    </style>
</resources>